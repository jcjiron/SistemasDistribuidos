DROP PROCEDURE IF EXISTS spINSERT;
DELIMITER $$ 
CREATE PROCEDURE spINSERT(
in _nombre VARCHAR(50))
BEGIN 
	INSERT INTO Hecho (nombreHecho) VALUES (_nombre);
END $$
DELIMITER ;

DROP PROCEDURE IF EXISTS spDELETE;
DELIMITER $$ 
CREATE PROCEDURE spDELETE(
in _idHecho INT)
BEGIN 
	DELETE FROM Hecho WHERE idHecho=_idHecho;
END $$
DELIMITER ;

DROP PROCEDURE IF EXISTS spUPDATE;
DELIMITER $$ 
CREATE PROCEDURE spUPDATE(
in _idHecho INT,
in _nombreHecho VARCHAR(50))
BEGIN 
	UPDATE Hecho SET nombreHecho=_nombreHecho WHERE idHecho=_idHecho;
END $$
DELIMITER ;

DROP PROCEDURE IF EXISTS spREAD;
DELIMITER $$
CREATE PROCEDURE spREAD(
IN _idHecho INT)
BEGIN 
	SELECT * FROM Hecho WHERE idHecho=_idHecho;
END $$
DELIMITER ;

DROP PROCEDURE IF EXISTS spREAD_ALL;
DELIMITER $$
CREATE PROCEDURE spREAD_ALL()
BEGIN 
	SELECT * FROM Hecho;
END $$
DELIMITER ;

CALL spINSERT("Juan");
CALL spINSERT("Estefania");
CALL spINSERT("Carlos");
CALL spUPDATE(7,"Monserrat");
CALL spREAD_ALL();
CALL spREAD;
CALL spDELETE(8);